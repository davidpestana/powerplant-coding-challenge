#!/bin/bash

####################
###   Binaries   ###
####################
DOCKER_COMPOSE=$(which docker-compose)
DOCKER=$(which docker)
####################

PROJECT_PATH="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && cd .. && pwd )"

export USER_ID=${UID}
export GROUP_ID=${UID}

${DOCKER_COMPOSE} \
    -f ${PROJECT_PATH}/deploy/develop/docker-compose.yml \
   build

${DOCKER_COMPOSE} \
    -f ${PROJECT_PATH}/deploy/develop/docker-compose.yml \
    run --user="$UID" django-api python manage.py migrate

${DOCKER_COMPOSE} \
    -f ${PROJECT_PATH}/deploy/develop/docker-compose.yml \
    run --user="$UID" django-api python manage.py createsuperuser --email admin@example.com --username admin